<!-- Layout comun para todas las paginas -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <title>PureVolt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <script defer src="/js/accesibility.js"></script>
    <script defer src="/js/jquery-3.7.1.min.js"></script>
    <script defer src="/js/bootstrap.bundle.min.js"></script>
    <script defer src="/js/htmlUtils.js"></script>
</head>

<body>
    <!-- Barra de navegacion -->
    <nav class="navbar navbar-expand-md navbar-light bg-body-secondary">
        <div class="container-fluid">

            <!-- Nombre de la empresa -->
            <a class="navbar-brand" href="/inicio">PureVolt</a>

            <!-- Menu hamburguesa para mostrar y ocultar la nav -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPureVolt" aria-controls="navbarPureVolt"
                aria-expanded="false" aria-label="Alternar barra de navegación">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Cuerpo de la barra de navegacion -->
            <div class="collapse navbar-collapse" id="navbarPureVolt">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <!-- Marcamos con active y con aria-current=page la sección seleccionada -->
                    <li class="nav-item">
                        <a class="nav-link <%- active.inicio ? 'active' : '' %>" <%- active.inicio ? 'aria-current="page"' : '' %> href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%- active.vehiculos ? 'active' : '' %>" <%- active.vehiculos ? 'aria-current="page"' : '' %>
                            href="/vehiculos">Vehículos disponibles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%- active.reservas ? 'active' : '' %>" <%- active.reservas ? 'aria-current="page"' : '' %> href="/reservas">Reservar
                            vehículo</a>
                    </li>
                    <li class="nav-item">
                        <button id="btnAccesibilidad" class="nav-link" data-bs-toggle="modal" data-bs-target="#modalAccesibilidad">Accesibilidad</button>
                    </li>
                </ul>

                <!-- Boton de iniciar sesion -->
                <div>
                    <button class="btn btn-primary" data-bs-toggle="offcanvas" data-bs-target="#offcanvasUsuario" aria-controls="offcanvasUsuario"
                        aria-expanded="false">Iniciar Sesión</button>
                </div>
            </div>
        </div>
    </nav>
    <!-- Cuerpo de la pagina -->
    <main class="container my-3 my-md-5">
        <!-- Contenido de la pagina -->
        <%- body %>
    </main>

    <!-- Modal de opciones de accesibilidad -->
    <div id="modalAccesibilidad" class="modal" tabindex="-1" aria-labelledby="modalAccesibilidadTitle">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Cabecera del modal -->
                <div class="modal-header">
                    <h5 class="modal-title" id="modalAccesibilidadTitle">Opciones de accesibilidad</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- Cuerpo del modal -->
                <div class="modal-body">
                    <form>

                        <!-- Modos de color -->
                        <fieldset>
                            <legend class="fs-5">Modo de color</legend>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radioTema" id="radioTemaLight" data-bs-theme-value="light" />
                                <label class="form-check-label" for="radioTemaLight">Claro</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radioTema" id="radioTemaDark" data-bs-theme-value="dark" />
                                <label class="form-check-label" for="radioTemaDark">Oscuro</label>
                            </div>

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radioTema" id="radioTemaAuto" data-bs-theme-value="auto" />
                                <label class="form-check-label" for="radioTemaAuto">Automático</label>
                            </div>
                        </fieldset>

                        <!-- Tamaños de fuente -->
                        <fieldset>
                            <legend class="fs-5">Tamaño de fuente</legend>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="radioFontSize" id="radioFontSizeSm" />
                                <label for="radioFontSizeSm" class="form-check-label">Pequeña</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="radioFontSize" id="radioFontSizeMd" />
                                <label for="radioFontSizeMd" class="form-check-label">Mediana</label>
                            </div>
                            <div class="form-check">
                                <input type="radio" class="form-check-input" name="radioFontSize" id="radioFontSizeLg" />
                                <label for="radioFontSizeLg" class="form-check-label">Grande</label>
                            </div>
                        </fieldset>
                    </form>
                </div>

                <!-- Footer del modal -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="modalAccesibilidadConfirmar" data-bs-dismiss="modal">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Offcanvas de opciones de usuario -->
    <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasUsuario" aria-labelledby="offcanvasUsuarioTitle">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasUsuarioTitle">Iniciar Sesión</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <form class="m-3 p-3 border rounded">
                <fieldset>
                    <div class="mb-3">
                        <label for="formLoginUsername" class="form-label">Usuario</label>
                        <input type="text" id="formLoginUsername" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="formLoginPassword" class="form-label">Contraseña</label>
                        <input type="password" id="formLoginPassword" class="form-control" />
                    </div>
                    <button class="btn btn-primary">Iniciar Sesión</button>
                </fieldset>
                <div class="my-3">
                    <a href="/registrarse">Registrarse</a>
                </div>
            </form>
        </div>
    </div>
</body>

</html>