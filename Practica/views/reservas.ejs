<form id="formRes" class="rounded border border-3 p-5 needs-validation shadow-lg" method="POST" action="/reservas">
    <fieldset>
        <legend class="text-center fw-bold">Datos de reserva</legend> 
        
        <div class="border-5 py-2 my-2">

            <% if (locals.err) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">No se ha podido realizar la reserva</h5>
                <%= locals.err %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
            <% } %>

            <div class="mb-3">
                <label for="formResVehiculo" class="form-label fw-bold">Vehículo</label>
                <select id="formResVehiculo" class="form-select" name="id_vehiculo" required>
                    <option value="" <%= selected.vehiculo ? '' : 'selected' %>>Selecciona un vehículo</option>
                    <% vehiculos.forEach(v => { %>
                    <option value="<%= v.id_vehiculo %>" <%= parseInt(selected.vehiculo)===parseInt(v.id_vehiculo) ? 'selected' : '' %>>
                        <%= v.matricula %> - <%= v.marca %> <%= v.modelo %> <%= v.anyo %>
                    </option>
                    <% }) %>
                </select>
                <span class="invalid-feedback">Debe seleccionar un vehículo</span>
            </div>
            <div class="mb-3">
                <label for="formResFechaIni" class="form-label fw-bold">Fecha de inicio</label>
                <input type="datetime-local" id="formResFechaIni" class="form-control" name="fecha_inicio" required>
                <span class="invalid-feedback">Debe indicar una fecha de inicio posterior a la actual</span>
            </div>
            <div class="mb-3">
                <label for="formResFechaFin" class="form-label fw-bold">Fecha de fin</label>
                <input type="datetime-local" id="formResFechaFin" class="form-control" name="fecha_fin" required>
                <span class="invalid-feedback">Debe indicar una fecha de fin posterior a la fecha de inicio</span>
            </div>
            <input type="hidden" id="formResUsuario" name="id_usuario" value="<%= user.id_usuario %>">
            <input type="hidden" id="formResEstado" name="estado" value="activa">
        </div>
    </fieldset>

    <fieldset>
        <div class="d-flex justify-content-center">
            <button id="formResSubmit" class="btn btn-primary me-2" type="button">Enviar</button>
            <button class="btn btn-secondary" type="reset">Limpiar Formulario</button>
        </div>
    </fieldset>

    <div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalConfirmacionLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalConfirmacionLabel">Atención</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div id="modalConfirmacionBody" class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </div>
            </div>
        </div>
    </div>
</form>

<script defer src="/js/modalReserva.js"></script>