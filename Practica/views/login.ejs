<form id="formLogin" aria-label="Formulario de inicio de sesión" method="POST" class="rounded border border-3 p-5 needs-validation" novalidate>
    <fieldset>
        <legend class="text-center fw-bold">Iniciar Sesión</legend>
        <div class="py-3">
            <% if (locals.err) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">No se ha podido iniciar sesión</h5>
                <%= locals.err %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
            </div>
            <% } %>

            <div class="mb-3">
                <label for="formLoginEmail" class="form-label fw-bold">Correo Electrónico</label>
                <div class="input-group">
                    <input type="text" id="formLoginEmail" class="form-control" name="correo" required pattern="^[a-zA-Z0-9]+@[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}$"
                        title="Solo se permiten letras y números.">
                </div>
                <span class="invalid-feedback">Por favor, ingresa solo letras y números (la parte antes de @purevolt.es).</span>
            </div>
            <div class="mb-3">
                <label for="formLoginPassword" class="form-label fw-bold">Contraseña</label>
                <input type="password" id="formLoginPassword" class="form-control" name="contrasena" required>
            </div>
        </div>

        <div class="pt-4 d-flex flex-column flex-md-row gap-5">
            <button class="btn btn-primary flex-fill" type="submit">Iniciar Sesión</button>
            <a href="/registrarse" class="btn btn-success flex-fill text-decoration-none">Registrarse</a>
        </div>
    </fieldset>
</form>