<!-- Modal mínimo para subir JSON -->
<div class="modal fade" id="uploadJsonUsuarios" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/login/upload-json" method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Subir JSON de Empleados</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="jsonFileEmpleados" class="form-label">Fichero .json (array de empleados)</label>
                        <input id="jsonFileEmpleados" name="file" type="file" class="form-control" accept=".json,application/json" required>
                        <div class="form-text">
