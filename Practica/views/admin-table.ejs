<% let iconSize=14 %>
<% let id_col = fields.find(f=>f.name.startsWith("id_")).name %>
<% let itemName = table.slice(0, -1) %>
<% insertUrl = "./create" %>
<% if(table==="reservas") insertUrl = "/reservas" %>
<% if(table==="usuarios") insertUrl = "/registrarse" %>


<base href="<%= base %>">

<div class="row mb-5">
    <div class="col-2">
        <a href="/administracion" class="btn btn-secondary" aria-label="Volver" title="Volver">
            <i class="bi bi-arrow-left" alt="Icono flecha izquierda"></i>
        </a>
    </div>
    <div class="col text-center">
        <h1><%= myUtils.capitalize(itemName) + 's' %></h1>
    </div>
    <div class="col-2 text-end">

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target=<%= "#uploadJson" + myUtils.capitalize(table) %>
            aria-label="Subir JSON de <%= table %>" title="Subir JSON de <%= table %>">
            <i class="bi bi-file-earmark-arrow-up" alt="Icono subir"></i>
        </button>
        <a href="<%= insertUrl %>" class="btn btn-success" aria-label="Insertar <%= itemName %>" title="Insertar <%= itemName %>">
            <i class="bi bi-plus-lg" alt="Icono signo más"></i>
        </a>
    </div>
</div>


