                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Subir
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<% if (locals.err) { %>
<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <h5 class="alert-heading">Ha ocurrido un error</h5>
    <%= locals.err %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
</div>
<% } %>

<% if (locals.success) { %>
<div class="alert alert-success alert-dismissible fade show" role="alert">
    <h5 class="alert-heading">Enhorabuena</h5>
    La acción se ha completado con éxito
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
</div>
<% } %>

<!-- ESTO DE ABAJO DESCOMENTARLO CUANDO SE MERGE LA SUBIDA DE JSON-->
<%# include('import-json') %>


<div class="table-responsive text-center">
    <table class="table table-striped w-auto mx-auto">
        <thead>
            <% if (table!="usuarios") { %>
            <th scope="col">Control</th>
            <% } %>

            <% fields.forEach(f => { %>
            <th scope="col"><%= f.name %></th>
            <% }) %>
        </thead>
        <tbody>
            <% rows.forEach(r => { %>
            <tr>
                <% if (table!="usuarios") { %>
                <td class="d-flex">
                    <a href="./update/<%= r[id_col] %>" class="btn btn-secondary mx-1" aria-label="Editar <%= itemName %>" title="Editar <%= itemName %>">
                        <i class="bi bi-pencil-square" alt="Icono lápiz"></i>
                    </a>
                    <button class="btn btn-danger mx-1" aria-label="Borrar <%= itemName %>" title="Borrar <%= itemName %>"
                        onclick=<%= `showDeleteModal(${r[id_col]})` %>>
                        <i class="bi bi-trash-fill" alt="Icono papelera"></i>
                    </button>
                </td>
                <% } %>

                <% fields.forEach(f => { %>
                <td class="text-truncate"><%= r[f.name] %></td>
                <% }) %>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<div class="modal fade" id="modalConfirmacion" tabindex="-1" aria-labelledby="modalConfirmacionLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalConfirmacionLabel">Atención</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="modalConfirmacionBody" class="modal-body">
                Estás seguro que desas borrar
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                <form id="formDeleteConfirm" method="POST">
                    <button type="submit" class="btn btn-primary">Confirmar</button>
                </form>
            </div>
        </div>
    </div>
</div>

