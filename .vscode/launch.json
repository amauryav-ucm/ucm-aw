{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Express Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/Practica/index.js",  // change to your entry file
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "--nolazy"
      ],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"   // optional: your server port
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
